            </div>
        </div>

        <div class="text-sm flex justify-end mt-6">
            <a href="#" class="font-semibold leading-6 hover:text-orange-500" id="login-now">Login now</a>
        </div>
    </div>
</div>

<script>
    document.getElementById("register-now").addEventListener("click", function () {
        document.getElementById("loginModal").classList.add("hidden");
        document.getElementById("registerModal").classList.remove("hidden");
    });
    
    document.getElementById("login-now").addEventListener("click", function () {
        document.getElementById("loginModal").classList.remove("hidden");
        document.getElementById("registerModal").classList.add("hidden");
    });
</script>
